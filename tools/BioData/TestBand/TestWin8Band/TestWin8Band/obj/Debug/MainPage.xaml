<Page
    x:Class="TestWin8Band.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestWin8Band"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="button" Content="Run" HorizontalAlignment="Left" Margin="185,112,0,0" VerticalAlignment="Top"                      Height="45" Width="130"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="30,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="533" Width="282" FontSize="16" Text="{Binding StatusMessage}"/>
        <TextBox x:ConnectionId='2' x:Name="ipTF" HorizontalAlignment="Left" Margin="90,18,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" RenderTransformOrigin="0.381,-0.805" Width="222"                               />
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="30,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="55" FontSize="16" Text="IP" RenderTransformOrigin="0.573,1.594"/>
        <TextBox x:ConnectionId='3' x:Name="portTF" HorizontalAlignment="Left" Margin="90,59,0,0" TextWrapping="Wrap" Text="7776" VerticalAlignment="Top" RenderTransformOrigin="0.381,-0.805" Width="222"                                 />
        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="30,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="16" Width="55" FontSize="16" Text="Port" RenderTransformOrigin="0.573,1.594"/>
        <Button x:ConnectionId='4' x:Name="setClientBT" Content="Set client" HorizontalAlignment="Left" Margin="27,112,0,0" VerticalAlignment="Top" Height="45" Width="130"                          />

    </Grid>
</Page>

